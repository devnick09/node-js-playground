<link rel="stylesheet" href="/css/home.css">
<h1>Codeil | <%= title %></h1>

<section>
    <h3>Posts</h3>
    <% if(locals.user) { %>
        <form action="/posts/create-post" method="post">
            <textarea name="content" cols="30" rows="3" placeholder="type here..." required></textarea>
            <input type="submit" value="Post">
        </form>
    <% } %>
    <div>
        <ul>
            <% for(post of posts) { %>
                <li>
                    <p>
                        <%= post.content %>
                        <% if(locals.user && locals.user.id == post.user.id) { %>
                            <a href="/posts/destroy/<%= post.id %>"><button>X</button></a>
                        <% } %><br>
                        <small><%= post.user.name %></small>
                    </p>
                    <% if(locals.user) { %>
                    <form action="/comments/create" method="post">
                        <input type="text" name="comment" placeholder="your comments.." required>
                        <input type="hidden" name="post" value="<%= post._id %>">
                        <input type="submit" value="comment">
                    </form>
                    <% } %>
                    <div>
                        <ul>
                            <% for(comment of post.comments) { %>
                                <li>
                                    <%= comment.comment %>
                                    <% if(locals.user && locals.user.id == comment.user.id) { %>
                                        <a href="/comments/destroy/<%= comment.id %>"><button>X</button></a>
                                    <% } %><br>
                                    <small>
                                        <%= comment.user.name %>
                                    </small>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</section>